<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignUpActivity"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#F1FFFA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="bottom">



        <TextView
            android:layout_width="600dp"
            android:layout_marginStart="-240dp"
            android:layout_marginBottom="-120dp"
            android:layout_height="400dp"
            android:background="@drawable/gradient_pink_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        android:layerType="hardware">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/rectangle_purple"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/emailFiled"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="  Introduceți o Adresa de Email"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:background="#533A7B"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/passwordFiled"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="  Setați o parolă"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:background="#533A7B"
            android:ems="10"
            android:inputType="textPassword"/>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/repasswordFiled"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="  Confirmați parola"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:background="#533A7B"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Înregistrare"
            android:textAllCaps="true"
            android:background="@drawable/rectangle_pink"
            android:textStyle="bold"
            android:textColor="#533A7B"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/goToLoginButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Am deja un cont. Login"
            android:textAllCaps="true"
            android:background="@drawable/rectangle_pink"
            android:textStyle="bold"
            android:textColor="#533A7B"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/brain"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:contentDescription="brain"
                android:layerType="hardware"
                android:src="@drawable/brain_logo"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="BUNĂ!"
            android:textColor="#fff"
            android:textSize="90sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="creează un cont nou"
            android:layout_marginStart="20dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:fontFamily="@font/poppins_extrabold"
            />

    </LinearLayout>






</RelativeLayout>