<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#9076BA"
                android:centerColor="#D8A0D3"
                android:centerY="1.0"
                android:endColor="#C8C0CA"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#C5FCEF"
                    android:centerColor="#4D8075"
                    android:centerY="1.0"
                    android:endColor="#55CFAD"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>